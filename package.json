{
  "name": "@axelhzf/react-apollo-hooks",
  "version": "0.1.0",
  "description": "Hooks for Apollo",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "repository": "https://github.com/axelhzf/react-apollo-hooks",
  "author": "Axel Hernandez Ferrera",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "rm -rf build && tsc --build tsconfig.build.json",
    "prettier": "prettier --write \"./src/**/*.{json,graphql,ts,tsx}\"",
    "lint": "tslint --project . -t stylish",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "is-equal-shallow": "^0.1.3"
  },
  "peerDependencies": {
    "apollo-client": "^2.4.12",
    "graphql": "^14.1.1",
    "react": "^16.8.0-alpha.1"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.5",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.20",
    "apollo-cache-inmemory": "^1.4.2",
    "apollo-client": "^2.4.12",
    "apollo-link-schema": "^1.1.4",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-testing-library": "^5.4.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --single-quote --write",
      "tslint --project .",
      "git add"
    ],
    "examples/**/*.{ts,tsx}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
